<main class="container my-5 pt-3">
  <div class="row">
    <div class="col-9">

      <h1 class="text-dark">Recent Posts</h1>

      <p><%= @posts.count %> Posts</p>

      <% @posts.each do |post| %>
        <div class="card">
          <% if post.banner.attached? %>
            <%= image_tag(post.banner, class: 'card-img-top') %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><td><%= link_to post.title, post %></td></h5>
            <p class="text-muted small">Author: <%= post.user.email %></p>
            <p class="text-muted small">Category: <%= post.category.name %></p>
            <p class="text-muted small">Last Updated: <%= post.updated_at.strftime("%b %e, %l:%M %p") %></p>
            <p class="card-text text-truncate text-dark">
              <%= post.body  %>
            </p>
          </div>
        </div>
      <% end %>

    </div>
    <!-- .col-9 -->

    <div class="col-3">
      <div class="list-group list-group-flush">
        <h3>Categories</h3>
        <% @categories.each do |category| %>
          <a href="<%= posts_path(category: category.name) %>" class="list-group-item list-group-item-action">
            <%= category.name %> <span class="badge badge-secondary"><%= Post.where(category_id: category.id).count %></span>
          </a>
        <% end %>
      </div>
    </div>
  </div>
  <!-- .row -->
</main>
