<main class="container mt-5 pt-3">
  <div class="row">
    <div class="col-9">

      <h1 class="text-dark">Recent Posts</h1>

      <p><%= @posts.count %> Posts</p>

      <% @posts.each do |post| %>
        <div class="card">
          <% if post.banner.attached? %>
            <%= image_tag(post.banner, class: 'card-img-top') %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><td><%= link_to post.title, post %></td></h5>
            <p class="text-muted small">By <%= post.user.email %></p>
            <p class="text-muted small"><%= post.updated_at.strftime("%b %e, %l:%M %p") %></p>
            <p class="card-text text-truncate text-dark">
              <%= post.body  %>
            </p>
          </div>
        </div>
      <% end %>

    </div>
    <!-- .col-9 -->
  </div>
  <!-- .row -->
</main>
