<main class="container mt-5 pt-3">
  <%= link_to 'Back', posts_path %> |
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %>


  <div class="jumbotron">
    <h1 class="text-dark"><%= @post.title %></h1>

    <p class="text-dark">
      <%= @post.body %>
    </p>
  </div>
</main>
