<main class="container mt-5 pt-3">
  <%= link_to 'Back', posts_path %> |
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %>

  <div class="jumbotron">
    <% if @post.banner.attached? %>
      <%= image_tag(@post.banner, class: 'img-fluid') %>
    <% end %>

    <h1 class="text-dark"><%= @post.title %></h1>
    <p class="text-muted small">By <%= @post.user.email %></p>
    <p class="small text-muted">Last updated: <%= @post.updated_at.strftime("%b %e, %l:%M %p") %> | <%= @post.views %> Views</p>
    <p class="text-dark">
      <%= @post.body %>
    </p>
  </div>
</main>

<section class="container">
  <div class="row">
    <div class="col-9">
      <% if user_signed_in? %>
        <%= render 'comments/form' %>
      <% end %>
        <p><%= link_to 'Log in', new_user_session_path, class: 'btn btn-outline-secondary' %> to post a comment.</p>
      <hr>
      <%= render 'posts/comment' %>
    </div>
    <!-- /.col-9 -->
  </div>
  <!-- /.row -->
</section>
